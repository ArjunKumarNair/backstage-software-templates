{
  "swagger": "2.0",
  "info": {
    "title": "Retrieval Service API",
    "version": "1.0.0"
  },
  "paths": {
    "/": {
      "post": {
        "summary": "Retrieve Relevant Documents",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Query, topK, and metric for retrieval",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "query": { "type": "string" },
                "topK": { "type": "integer" },
                "metric": { "type": "string" }
              },
              "required": ["query"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Relevant documents",
            "schema": {
              "type": "object",
              "properties": {
                "results": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "responses": {
          "200": {
            "description": "Service status",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}