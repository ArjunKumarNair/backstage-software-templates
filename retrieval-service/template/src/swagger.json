{
    "swagger": "2.0",
    "info": {
        "title": "End-to-End RAG Pipeline API",
        "version": "1.0.0"
    },
    "paths": {
        "/": {
            "post": {
                "summary": "Query Similar Chunks",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Query string",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "query": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "query"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Similar chunks of text",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "textList": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

        "/health": {
            "get": {
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "Service status",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "status": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}