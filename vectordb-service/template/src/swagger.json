{
  "swagger": "2.0",
  "info": {
    "title": "VectorDB Service API",
    "version": "1.0.0"
  },
  "paths": {
    "/upsert": {
      "post": {
        "summary": "Upsert Documents",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Documents to upsert",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "docs": {
                  "type": "array",
                  "items": { "type": "object" }
                }
              },
              "required": ["docs"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Upsert result",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string" }
              }
            }
          },
          "500": {
            "description": "Upsert failed"
          }
        }
      }
    },
    "/query": {
      "post": {
        "summary": "Query Similar Documents",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Embedding and query parameters",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "embedding": {
                  "type": "array",
                  "items": { "type": "number" }
                },
                "topK": { "type": "integer", "default": 3 },
                "metric": { "type": "string", "default": "cosine" }
              },
              "required": ["embedding"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Similar documents",
            "schema": {
              "type": "object",
              "properties": {
                "textList": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health Check",
        "responses": {
          "200": {
            "description": "Service status",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}